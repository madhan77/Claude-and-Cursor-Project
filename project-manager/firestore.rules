rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow demo mode to read demo user
      allow read: if userId == 'demo-user-id';
    }

    // Projects collection
    match /projects/{projectId} {
      // Allow authenticated users to create if they're the owner
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      // Demo mode can create with demo-user-id
      allow create: if request.resource.data.createdBy == 'demo-user-id';

      // Allow authenticated users to read
      allow get: if request.auth != null;
      // Allow unauthenticated reads for demo data only
      allow get: if resource.data.createdBy == 'demo-user-id';

      // Allow list operations for both authenticated and unauthenticated users
      // (filtering happens on client side for demo data)
      allow list: if true;

      // Allow updates and deletes
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Epics collection
    match /epics/{epicId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Features collection
    match /features/{featureId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Stories collection
    match /stories/{storyId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Sprints collection
    match /sprints/{sprintId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Requests collection
    match /requests/{requestId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Change Requests collection
    match /changeRequests/{changeRequestId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }

    // Meetings collection
    match /meetings/{meetingId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow create: if request.resource.data.createdBy == 'demo-user-id';
      allow get: if request.auth != null;
      allow get: if resource.data.createdBy == 'demo-user-id';
      allow list: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow update, delete: if resource.data.createdBy == 'demo-user-id';
    }
  }
}
