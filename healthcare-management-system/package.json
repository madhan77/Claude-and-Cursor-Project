{
  "name": "healthcare-management-system",
  "version": "1.0.0",
  "description": "Comprehensive Healthcare Management System",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:dev": "docker-compose -f infrastructure/docker/docker-compose.dev.yml up",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.dev.yml down",
    "db:migrate": "cd services/api-gateway && npm run migrate",
    "db:seed": "cd services/api-gateway && npm run seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.8.1"
}
