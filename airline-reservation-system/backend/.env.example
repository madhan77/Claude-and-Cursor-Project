# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=airline_reservation
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com, port 587, enable 2FA and use App Password
# For SendGrid: smtp.sendgrid.net, port 587, user=apikey, pass=your_api_key
# For AWS SES: email-smtp.region.amazonaws.com, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@airlinereservation.com

# SMS Configuration (Twilio)
# Sign up at: https://www.twilio.com/try-twilio
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Real-time Flight API Configuration (Optional)
# Provider options: aviationstack, amadeus, flightaware
# Aviationstack: https://aviationstack.com (100 free requests/month)
# Amadeus: https://developers.amadeus.com (enterprise)
# FlightAware: https://www.flightaware.com/commercial/aeroapi/
FLIGHT_API_PROVIDER=aviationstack
FLIGHT_API_KEY=your_flight_api_key_here

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
