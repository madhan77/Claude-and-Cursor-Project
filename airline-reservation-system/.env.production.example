# Production Environment Variables
# Copy this file to .env for local Docker deployment
# Or set these in your cloud platform (Railway, Render, etc.)

# Database Configuration
DB_USER=postgres
DB_PASSWORD=change_me_in_production
DB_NAME=airline_reservation
DB_HOST=database  # For Docker, use 'database'. For cloud, use your DB host.
DB_PORT=5432

# JWT Secrets (MUST CHANGE IN PRODUCTION!)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_32_CHAR_STRING_IN_PRODUCTION

# URLs
FRONTEND_URL=https://your-app.vercel.app
BACKEND_URL=https://your-backend.up.railway.app
VITE_API_URL=https://your-backend.up.railway.app/api/v1

# Optional: Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@yourapp.com

# Optional: Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
