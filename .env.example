# Application Settings
APP_NAME=Voice Transcript Test Builder
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///./app.db

# AI/LLM Settings (Choose one)
# Option 1: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_PROVIDER=anthropic
AI_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI
# OPENAI_API_KEY=your-openai-api-key-here
# AI_PROVIDER=openai
# AI_MODEL=gpt-4-turbo-preview

# ServiceNow Settings
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password
# Or use OAuth
# SERVICENOW_CLIENT_ID=your-client-id
# SERVICENOW_CLIENT_SECRET=your-client-secret

# Email Settings (for approval notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
NOTIFICATION_EMAIL_FROM=noreply@yourcompany.com
PRODUCT_OWNER_EMAIL=po@yourcompany.com

# Approval Settings
APPROVAL_REQUIRED=true
AUTO_CREATE_STORY_ON_APPROVAL=true

# Test Script Settings
TEST_SCRIPT_FORMAT=gherkin
# Options: gherkin, pytest, manual, cucumber
